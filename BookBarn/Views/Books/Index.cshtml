@model List<BookBarn.Models.Book>

<h1>Books</h1>

<p>This page is now reading real data from the database using EF Core.</p>

@if (Model == null || Model.Count == 0)
{
    <p><em>No books found.</em></p>
}
else
{
    <ul>
        @foreach (var book in Model)
        {
            <li>
                <strong>@book.Title</strong> by @book.Author — $@book.Price
            </li>
        }
    </ul>
}