@model List<BookBarn.Models.Authors>

<h1>Authors</h1>
<p>This page is now reading real data from the database using EF Core.</p>

@if (Model == null || Model.Count == 0)
{
    <p><em>No authors found.</em></p>
}
else
{
    <ul>
        @foreach (var author in Model)
        {
            <li>
                <strong>@author.Name</strong> — @author.Bio
            </li>
        }
    </ul>
}